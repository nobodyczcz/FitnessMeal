@model FitnessMeal.Models.CustomViewModel

@{
    ViewBag.Title = "Register";
}

<h4>Create a new account.</h4>
<hr />
<div class="card card-body">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group row">

            <div class="col-md-6">
                @Html.LabelFor(m => m.RegisterViewModel.Email, new { @class = " control-label" })
                <div>
                    @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-6">
                @Html.LabelFor(model => model.USER.USERNAME, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.USER.USERNAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.USER.USERNAME, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.USER.DOB, htmlAttributes: new { @class = "control-label" })
                <div class="input-group date" id="dobpicker" data-provide="datepicker">
                    @Html.EditorFor(model => model.USER.DOB, new { htmlAttributes = new { @class = "form-control", @placeholder = "mm/dd/yyyy" } })
                    <div class="input-group-addon align-center" style="font-size:20px;margin-left:5px">
                        <span class="nc-icon nc-calendar-60"></span>
                    </div>
                    @Html.ValidationMessageFor(model => model.USER.DOB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                @Html.LabelFor(model => model.USER.User_Type, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(model => model.USER.User_Type, new List<SelectListItem>{
                   new SelectListItem { Text = "Normal USER", Value = "fitness_USER", Selected = true },
                    new SelectListItem { Text = "Restaurant owner", Value = "restaurant_owner" } }, new { @class = "form-control" } )

                    @Html.ValidationMessageFor(model => model.USER.User_Type, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group  row">
            <div class="col-md-6">
                @Html.LabelFor(m => m.RegisterViewModel.Password, new { @class = " control-label" })
                <div>
                    @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = " control-label" })
                <div>
                    @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        </div>
    }
</div>




@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.js"></script>
    <script defer type="text/javascript">
        $("#navBand").show();
        $("#navBand").html("Register");
        $('#dobpicker').datepicker({
            format: 'mm/dd/yyyy',
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
