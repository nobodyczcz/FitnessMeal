<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />


    <!--css and js for datepicker-->
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")


</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
            -->
            <div class="logo">
                <a href="@Url.Action("Index", "Home")" class="logo-outer">
                    <div class="logo-border">
                        <div class="logo-inner">
                            <h1 class="logo-text">Fitness Every Meal</h1>
                        </div>
                    </div>

                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="nc-icon nc-zoom-split"></i>
                            <p>Discovery</p>
                        </a>
                    </li>
                    @Html.Partial("_MenuPartial")
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel body-content" style="min-width:400px">
            <!--Navbar-->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top bg-success">
                <div class="container-fluid">

                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler" id="sidebartoggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a id="navBand" class="navbar-brand hidden" href="#pablo">Paper Dashboard 2</a>
                    </div>


                    <a class="navbar-text" style="max-width: 220px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;" id="currentLocation"></a>


                    <button class="btn btn-round btn-sm btn-danger" style="margin:0" id="changeLocation">Location</button>


                </div>
            </nav>
            <div class="content" style="margin-top:70px">
                @RenderBody()
            </div>

            <footer>
                <p>&copy; @DateTime.Now  Fitness Every Meal</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jQuery")


    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/popper")

    @Scripts.Render("~/bundles/others")
    @Scripts.Render("~/bundles/paperdash")
    <script asyc type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>





    @RenderSection("scripts", required: false)
</body>
</html>
